{
    "compilerOptions": {
      /* 출력 */
      "outDir": "dist",
      "sourceMap": true,
      "inlineSources": true,
      "declaration": true,
      "declarationMap": true,
  
      /* 언어·모듈 */
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7"
      ],
  
      /* 편의 옵션 */
      "strict": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
  
      /* 경로 매핑(선택) */
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*"]
  }